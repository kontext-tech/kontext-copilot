@implements IDialogContentComponent

<div>
    <FluentDesignTheme @ref=_theme
                       @bind-Mode="@Mode"
                       @bind-CustomColor="@SelectedColor"
                       Direction="@Direction"
                       StorageName="theme" />

    <FluentStack Orientation="Orientation.Vertical" VerticalGap="0">
        <FluentSelect Label="Theme"
                      Width="100%"
                      Style="margin-bottom: 30px;"
                      Items="@AllModes"
                      @bind-SelectedOption="@Mode" />

        <FluentSelect Label="Color"
                      Style="margin-bottom: 30px;"
                      Width="100%"
                      Items="@Colors"
                      Height="200px"
                      @bind-SelectedOption="@SelectedColor">
            <OptionTemplate>
                <FluentStack>
                    <FluentIcon Value="@(new Icons.Filled.Size20.RectangleLandscape())"
                                Color="Color.Custom"
                                CustomColor="@context" />
                    <FluentLabel>@GetColorName(context)</FluentLabel>
                </FluentStack>
            </OptionTemplate>
        </FluentSelect>

        <FluentSwitch Label="Direction"
                      Style="margin-bottom: 30px;"
                      CheckedMessage="Left to Right"
                      UncheckedMessage="Right to Left"
                      Value="@_ltr"
                      ValueChanged="HandleDirectionChanged" />
        <FluentDivider Style="width: 100%; margin: 1rem 0" />

        <FluentStack VerticalAlignment="VerticalAlignment.Center">
            <FluentButton OnClick="@ResetSiteAsync">Reset settings</FluentButton>
        </FluentStack>

        <p style="margin-top: 1rem;">
            <em><strong>@_status</strong></em>
        </p>
    </FluentStack>
</div>